{
  "name": "virtualescaperoom-web",
  "version": "1.0.0",
  "description": "Backend and WebApp for VirtualEscapeRoom project: https://github.com/Blizzarus/VirtualEscapeRoom",
  "main": "server/index.js",
  "bin": "server/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "client": "npm --prefix client run serve",
    "server": "npm --prefix server run serve",
    "all": "concurrently \"npm run server\" \"npm run client\"" ,
    "pkg": "npm --prefix client run build && pkg ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Blizzarus/VirtualEscapeRoom-Web.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Blizzarus/VirtualEscapeRoom-Web/issues"
  },
  "homepage": "https://github.com/Blizzarus/VirtualEscapeRoom-Web#readme",
  "pkg": {
    "scripts": "server/public/**/*.js",
    "assets": ["server/public/static/css/*", "server/public/static/media/*", "server/public/static/*", "/server/public/*"],
    "targets": ["node18"],
    "outputPath": "dist"
  }
}
